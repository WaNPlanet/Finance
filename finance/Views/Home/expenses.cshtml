@{
    ViewData["Title"] = "All Expenses";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">All Expenses</h1>
    <br>
    <hr />
    <h3>Total Expenses $@ViewBag.Expenses</h3>
    <br>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Value
                </th>
                <th>
                    Description
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var expense in Model){
                    <tr>
                        <td>@expense.Id</td>
                   
                        <td>@expense.Value</td>
                    
                        <td>@expense.Description</td>

                        <td>
                            <a asp-action="CreateEditExpense"  asp-route-id="@expense.Id">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <br>
   <a asp-controller="Home" asp-action="CreateEditExpense" class="btn btn-secondary">Create New</a>
    @* <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
</div>
